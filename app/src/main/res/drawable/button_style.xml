<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/input_text_hint" />
            <gradient android:angle="-90" android:startColor="#173518" android:endColor="@color/btn_bg"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/input_text_hint" />
            <solid android:color="@color/btn_bg"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/input_text_hint" />
            <gradient android:angle="-90" android:startColor="@color/btn_bg" android:endColor="#173518" />
        </shape>
    </item>
</selector>