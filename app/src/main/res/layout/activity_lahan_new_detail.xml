<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sentra_new"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mobileagro.reborn.SentraNewActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/behind_logo"
            android:gravity="bottom">

            <ImageButton
                app:srcCompat="@drawable/ic_arrow_left_grey600_24dp"
                android:id="@+id/back_button"
                android:background="@android:color/transparent"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:layout_width="50dp"
                android:layout_height="30dp" />

            <TextView
                android:text="Kesesuaian Lahan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:fontFamily="sans-serif-smallcaps"
                android:textStyle="normal|bold"
                android:textColor="@color/top_font"/>

            <ImageView
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/tanam_logo"
                android:id="@+id/imageView4"
                android:layout_weight="1"
                android:layout_width="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_centerInParent="true" android:paddingTop="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:src="@drawable/loc_info"
                    android:id="@+id/textView1"
                    android:textAlignment="center"
                    android:layout_centerInParent="true" android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/currLocNew"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_centerInParent="true" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#151c12"
                android:layout_margin="0dp"
                android:padding="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Komoditas"
                    android:id="@+id/komoditasTitle"
                    android:textColor="#ffffff" />
            </FrameLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:id="@+id/imageView2"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="5dp"
                android:layout_height="120dp" />
            <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Lahan yang Sesuai"
                            android:id="@+id/textDesc" />

                        <TableLayout
                            android:id="@+id/tbl_01"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TableRow
                                android:id="@+id/tr01"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="100">
                                <TextView
                                    android:id="@+id/tv01"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="50"
                                    android:gravity="center"
                                    android:textSize="14dp"
                                    android:text="Kecamatan"/>
                                <TextView
                                    android:id="@+id/tv02"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="50"
                                    android:gravity="center"
                                    android:textSize="14dp"
                                    android:text="Kesesuaian Lahan (Ha)"/>
                            </TableRow>
                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="3dp"
                                android:background="@color/colorPrimary" />
                        </TableLayout>

                    </LinearLayout>


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#151c12"
                        android:layout_margin="0dp"
                        android:padding="4dp"
                        android:layout_marginBottom="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Kesesuaian Varietas"
                            android:id="@+id/textView3"
                            android:textColor="#ffffff" />
                    </FrameLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Musim Kering"
                        android:id="@+id/tv_01"
                        android:textColor="#000000" />
                    <ListView
                        android:id="@+id/listViewVarMK"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Musim Hujan"
                        android:id="@+id/tv_02"
                        android:textColor="#000000" />
                    <ListView
                        android:id="@+id/listViewVarMH"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Preferensi Petani"
                        android:id="@+id/tv_03"
                        android:textColor="#000000" />
                    <ListView
                        android:id="@+id/listViewVarPref"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"/>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#151c12"
                        android:layout_margin="0dp"
                        android:padding="4dp"
                        android:layout_marginBottom="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Teknologi Pertanian"
                            android:id="@+id/textTeknologi"
                            android:textColor="#ffffff" />
                    </FrameLayout>
                    <ListView
                        android:id="@+id/listViewTekno"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"/>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
