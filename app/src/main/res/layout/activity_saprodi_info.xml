<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_saprodi_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mobileagro.reborn.saprodi.SaprodiInfo">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="bottom"
            android:background="@color/behind_logo"
            android:id="@+id/top_layout">

            <ImageButton
                app:srcCompat="@drawable/ic_arrow_left_grey600_24dp"
                android:id="@+id/back_button"
                android:background="@android:color/transparent"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:layout_width="50dp"
                android:layout_height="30dp" />

            <TextView
                android:text="Daftar Sarana Produksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:fontFamily="sans-serif-smallcaps"
                android:textStyle="normal|bold"
                android:textColor="@color/top_font"/>

            <ImageView
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/tanam_logo"
                android:id="@+id/imageView4"
                android:layout_weight="0.5"
                android:layout_width="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:layout_marginTop="20dp">

                <include layout="@layout/content_saprodi_info" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="top"
            android:layout_marginTop="10dp"
            android:layout_height="40dp">
            <Button
                android:text="SIMPAN DATA"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:id="@+id/login_user"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="6dp"
                android:layout_width="135dp"
                android:height="60dp"
                android:layout_weight="2"
                android:textColor="@color/btn_text"
                android:background="@drawable/button_style"
                android:onClick="saveData"/>
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:layout_marginTop="10dp">
            <Button
                android:text="TAMBAH SAPRODI"
                android:textSize="16sp"
                android:layout_height="40dp"
                android:id="@+id/register"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="6dp"
                android:layout_width="135dp"
                android:height="60dp"
                android:layout_weight="2"
                android:textColor="@color/btn_text"
                android:background="@drawable/button_style"
                android:onClick="inputSaprodiClick"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
