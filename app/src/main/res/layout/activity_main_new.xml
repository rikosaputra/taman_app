<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_new"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mobileagro.reborn.MainNewActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                app:srcCompat="@drawable/tanam_logo"
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/behind_logo"/>

        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="30dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageSwitcher
                        android:layout_width="match_parent"
                        android:id="@+id/imgSw"
                        android:layout_height="160dp"
                        android:layout_marginBottom="15dp" />
                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <Button
                        android:text="Sentra Produksi"
                        android:textSize="12dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/buttonSentra"
                        android:drawableLeft="@drawable/sentra_a"
                        android:background="@drawable/flat_selector"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:textColor="@color/btn_bg"
                        android:layout_marginRight="6dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="135dp"
                        android:height="85dp"
                        android:layout_weight="2"
                        android:onClick="clickSentra"
                        android:elevation="0dp" />

                    <Button
                        android:text="Kesesuaian Lahan"
                        android:textSize="12dp"
                        android:textColor="@color/btn_bg"
                        android:layout_height="wrap_content"
                        android:id="@+id/buttonLahan"
                        android:drawableLeft="@drawable/lahan_a"
                        android:background="@drawable/flat_selector"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="6dp"
                        android:layout_width="135dp"
                        android:height="85dp"
                        android:layout_weight="2"
                        android:onClick="clickLahan"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp">

                    <Button
                        android:text="Kesesuaian Varietas"
                        android:textSize="12dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/buttonVarietas"
                        android:drawableLeft="@drawable/varietas_a"
                        android:background="@drawable/flat_selector"
                        android:textColor="@color/btn_bg"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:layout_marginRight="6dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="135dp"
                        android:height="85dp"
                        android:layout_weight="2"
                        android:onClick="clickVarietas"/>

                    <Button
                        android:text="Konsultasi"
                        android:textSize="12dp"
                        android:textColor="@color/btn_bg"
                        android:layout_height="wrap_content"
                        android:id="@+id/buttonKonsul"
                        android:drawableLeft="@drawable/konsul_a"
                        android:background="@drawable/flat_selector"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="6dp"
                        android:layout_width="135dp"
                        android:height="85dp"
                        android:layout_weight="2"
                        android:onClick="clickKonsul"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp">

                    <Button
                        android:text="Saprodi"
                        android:textSize="12dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/buttonAlsintan"
                        android:drawableLeft="@drawable/alsintan_a"
                        android:background="@drawable/flat_selector"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:layout_marginRight="6dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="135dp"
                        android:height="85dp"
                        android:layout_weight="2"
                        android:textColor="@color/btn_bg"
                        android:onClick="clickAlsintan"/>

                    <Button
                        android:text="Benih"
                        android:textSize="12dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/opt"
                        android:drawableLeft="@drawable/benih_a"
                        android:background="@drawable/flat_selector"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="6dp"
                        android:layout_width="135dp"
                        android:height="85dp"
                        android:layout_weight="2"
                        android:textColor="@color/btn_bg"
                        android:onClick="clickKonsul"
                        android:visibility="invisible"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:background="#ffffff"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|right"
            android:paddingRight="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:text="Bantuan"
                android:layout_width="wrap_content"
                android:id="@+id/textView1"
                android:textColor="@color/tabsScrollColor"
                android:textStyle="normal|bold"
                android:textSize="@dimen/link_size"
                android:linksClickable="true"
                android:layout_height="25dp"
                android:gravity="fill_vertical"
                android:onClick="clickBantuan"/>
            <TextView
                android:text="  |  "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:textColor="@color/tabsScrollColor"
                android:textSize="@dimen/link_size" />

            <TextView
                android:text="Tentang"
                android:layout_width="wrap_content"
                android:textStyle="normal|bold"
                android:id="@+id/textView3"
                android:textColor="@color/tabsScrollColor"
                android:textSize="@dimen/link_size"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:onClick="clickTentang"/>

            <TextView
                android:text="  |  "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:textColor="@color/tabsScrollColor"
                android:textSize="@dimen/link_size"/>
            <TextView
                android:text="Profil"
                android:layout_width="wrap_content"
                android:id="@+id/textView5"
                android:textStyle="normal|bold"
                android:textColor="@color/tabsScrollColor"
                android:textSize="@dimen/link_size"
                android:layout_height="25dp"
                android:gravity="center_vertical" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
